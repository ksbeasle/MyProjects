@model IEnumerable<firstapp_tutorial.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "Games", FormMethod.Get))
    {
    <p>
    Genre: @Html.DropDownList("searchGenre", "All")
    Title: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Search"/></p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.platform)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.comment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.score)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.rating)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.platform)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.comment)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
